@model Group5__iCLOTHINGApp.Models.UserQuery

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">What's your query?</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    <label class="text-danger">@ViewBag.Notifications</label>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.queryNo, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.ValidationMessageFor(model => model.queryNo, "", new { @class = "text-danger" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.queryNo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">
            Customer
            @Html.ValidationMessageFor(model => model.customerID, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10">
            @Html.DropDownList("customerID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        Message
        @Html.ValidationMessageFor(model => model.queryDescription, "", new { @class = "text-danger" })
        <div class="col-xs-4">
            @Html.TextAreaFor(model => model.queryDescription, new { @class = "form-control", rows = "5", style = "width: 100%; max-width: 100%;" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <p class="my-1">@Html.DisplayFor(model => model.queryDate.Date)</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-dark m-2" />
            @Html.ActionLink("Back to Messages", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    </div>
</div>
}
