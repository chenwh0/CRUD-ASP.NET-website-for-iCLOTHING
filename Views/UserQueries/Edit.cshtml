@model Group5__iCLOTHINGApp.Models.UserQuery

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h3>Query #@Html.DisplayFor(model => model.queryNo)</h3>
    <hr />
    <label class="text-danger">@ViewBag.Notifications</label>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model=>model.queryNo)

    <div class="form-group">
        @Html.LabelFor(model => model.queryDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.queryDate, new { htmlAttributes = new { @class = "form-control", disabled="disabled"} })
            @Html.ValidationMessageFor(model => model.queryDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.queryDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.TextAreaFor(model => model.queryDescription, new { @class = "form-control", rows = "5", style = "width: 100%; max-width: 100%;" })
            @Html.ValidationMessageFor(model => model.queryDescription, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.customerID, "customerID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("customerID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.customerID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 my-2">
            <input type="submit" value="Save" class="btn btn-dark" />
            @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    </div>
</div>
}
