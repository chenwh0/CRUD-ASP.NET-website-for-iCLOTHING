@model Group5__iCLOTHINGApp.Models.AboutUs

@{
    ViewBag.Title = "Edit";
}

<h1>About - Edit</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model => model.adminID)
    <label class="text-danger">@ViewBag.Notifications</label>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.companyAddress, new { @class = "control-label fs-3" })
        @Html.ValidationMessageFor(model => model.companyAddress, "", new { @class = "text-danger" })
        <div>
            @Html.TextAreaFor(model => model.companyAddress, 5, 50, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.companyShippingPolicy, new { @class = "control-label fs-3" })
        @Html.ValidationMessageFor(model => model.companyShippingPolicy, "", new { @class = "text-danger" })
        <div>
            @Html.TextAreaFor(model => model.companyShippingPolicy, new { @class = "form-control", rows = "5", style = "width: 100%; max-width: 100%;" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.companyReturnPolicy, new { @class = "control-label fs-3" })
        @Html.ValidationMessageFor(model => model.companyReturnPolicy, "", new { @class = "text-danger" })
        <div>
            @Html.TextAreaFor(model => model.companyReturnPolicy, new { @class = "form-control", rows = "5", style = "width: 100%; max-width: 100%;" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.companyContactInfo, new { @class = "control-label fs-3" })
        @Html.ValidationMessageFor(model => model.companyContactInfo, "", new { @class = "text-danger" })
        <div>
            @Html.TextAreaFor(model => model.companyContactInfo, 5, 50, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.companyBusinessDescription, new { @class = "control-label fs-3" })
        @Html.ValidationMessageFor(model => model.companyBusinessDescription, "", new { @class = "text-danger" })
        <div>
            @Html.TextAreaFor(model => model.companyBusinessDescription, new { @class = "form-control", rows = "10", style = "width: 100%; max-width: 100%;" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-dark m-2" />
            @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    </div>
</div>

}